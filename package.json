{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "engineStrict": true,
  "engines": {
    "node": ">=12.14.0",
    "yarn": ">=1.21.0 <2.0.0"
  },
  "scripts": {
    "unsafe-git": "HUSKY=0 git",
    "unsafe-commit": "HUSKY=0 git-cz",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts,js",
    "lint:fix": "eslint --fix . --ext ts,js",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "husky": "7.0.4",
    "lint-staged": "12.3.7",
    "prettier": "2.6.1",
    "simple-git": "3.15.0"
  }
}
